#!/bin/bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"

. "${DIR}/bash/vars"
. "${DIR}/bash/functions"


if [ "$1" = "start" ];
then 
	service_start $@
elif [ "$1" = "stop" ];
then 
	service_stop
elif [ "$1" = "restart" ];
then
	service_stop
	service_start $@
else 
	echo "Unknown command"
	exit 1;
fi


